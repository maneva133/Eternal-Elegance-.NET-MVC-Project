<!DOCTYPE HTML>
<html>
<head>
    <title>@ViewBag.Title - Your Site</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link href="~/wwwroot/assets/css/main.css" rel="stylesheet" />
    <link href="~/wwwroot/assets/css/fontawesome-all.min.css" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.6.3/jquery-ui-timepicker-addon.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.6.3/jquery-ui-timepicker-addon.min.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <style>
        .auth-buttons {
            position: absolute;
            top: 20px;
            right: 20px;
        }

            .auth-buttons a {
                margin-left: 10px;
                padding: 8px 16px;
                background-color: darkslategrey;
                color: #fff;
                border-radius: 4px;
                text-decoration: none;
            }

                .auth-buttons a:hover {
                    background-color: #0056b3;
                }


                #logo{
                    position:absolute;
                    top:2em;
                    left:2px;
                    height:50px;
                    width:auto;
                }

        .boo {
            margin-left: 10px;
            font-size: xx-small;
            font-family: inherit;
            background-color: darkslategrey;
            color: #fff;
            border-radius: 4px;
            text-decoration: none;
            transition: color .25s ease-in-out;
        }

       
    </style>
</head>
<body class="homepage is-preload">
    <div id="page-wrapper">

        <!-- Header -->
        <section id="header" class="wrapper">

            <!-- Logo -->
            <div id="logo">
                <a href="~/">
                    <img id="piclogo" src="~/wwwroot/assets/css/images/logo-no-background.png" alt="Eternal Elegance Logo" />

                </a>

            </div>

            <!-- Nav -->
            <nav id="nav">
                <ul>
                    <li class="current">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Book your Appointment", "Create", "Bookings")</li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Appointments", "Index", "Bookings")</li>
                        <li>@Html.ActionLink("Employees", "Index", "Employees")</li>
                        <li>@Html.ActionLink("Services", "Index", "Services")</li>



                    }

                </ul>
            </nav>

            <!-- Auth Buttons -->
            <div class="auth-buttons">
                @if (User.Identity.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOffPost", "Account", FormMethod.Post, new {  }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="boo">Log Off</button>
                    }
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")">Log In</a>
                    <a href="@Url.Action("Register", "Account")">Register</a>
                }
            </div>



        </section>

        <!-- Main Content -->
        <section id="main" class="wrapper style2">
            <div class="title">@ViewBag.Title</div>
            <div class="container">
                @RenderBody()
            </div>
        </section>

        <!-- Footer -->
        <section id="footer" class="wrapper">
            <div class="title">The Rest Of It</div>
            <div class="container">
                <header class="style1">
                    <h2>Have any questions?</h2>
                    <p>
                       Feel free to send us an email, we will write you back as soon as possible!
                    </p>
                </header>
                <div class="row">
                    <div class="col-6 col-12-medium">

                        <!-- Contact Form -->
                        <section>
                            <form method="post" action="@Url.Action("SendEmail", "Home")">
                                <div class="row gtr-50">
                                    <div class="col-6 col-12-small">
                                        <input type="text" name="Name" id="contact-name" placeholder="Name" required />
                                    </div>
                                    <div class="col-6 col-12-small">
                                        <input type="email" name="Email" id="contact-email" placeholder="Email" required />
                                    </div>
                                    <div class="col-12">
                                        <textarea name="Message" id="contact-message" placeholder="Message" rows="4" required></textarea>
                                    </div>
                                    <div class="col-12">
                                        <ul class="actions">
                                            <li><input type="submit" class="style1" value="Send" /></li>
                                            <li><input type="reset" class="style2" value="Reset" /></li>
                                        </ul>
                                    </div>
                                </div>
                            </form>
                        </section>


                    </div>
                    <div class="col-6 col-12-medium">

                        <!-- Contact -->
                        <section class="feature-list small">
                            <div class="row">
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon solid fa-home">Address</h3>
                                        <p>
                                            Partizanski Odredi br.87<br />
                                            Skopje
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon solid fa-comment">Social</h3>
                                        <p>
                                            <a href="#">linkedin.com/untitled</a><br />
                                            <a href="#">facebook.com/untitled</a>
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon solid fa-envelope">Email</h3>
                                        <p>
                                            <a href="#">info@eternalelegance.com</a>
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon solid fa-phone">Phone</h3>
                                        <p>
                                            043-444/595
                                        </p>
                                    </section>
                                </div>
                            </div>
                        </section>

                    </div>
                </div>

            </div>
        </section>

    </div>

    <!-- Scripts -->
    <script src="~/wwwroot/assets/js/jquery.min.js"></script>
    <script src="~/wwwroot/assets/js/jquery.dropotron.min.js"></script>
    <script src="~/wwwroot/assets/js/browser.min.js"></script>
    <script src="~/wwwroot/assets/js/breakpoints.min.js"></script>
    <script src="~/wwwroot/assets/js/util.js"></script>
    <script src="~/wwwroot/assets/js/main.js"></script>

   

    @Scripts.Render("~/bundles/timepicker")
    @RenderSection("scripts", required: false)
</body>
</html>
